@article{Dehaene1993,
abstract = {<p>The notion that human perceptual decisions are based on discrete processing cycles rather than a continuous accumulation of information was examined experimentally. Significant periodicities were found in human response times (RT) to feature and conjunction discrimination tasks in the visual and auditory modalities. Individual RT histograms were multimodal, with regularly spaced peaks and troughs, indicating that responses were emitted more frequently at regularly recurring time intervals following stimulus presentation. On average, responses were initiated after four to seven discrete processing steps whose “quantum” duration was proportional to task difficulty.</p>},
