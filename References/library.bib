file = {:home/veithweilnhammer/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Monto et al. - 2008 - Very slow EEG fluctuations predict the dynamics of stimulus detection and oscillation amplitudes in humans.pdf:pdf},
