   title = {Mice regulate their attentional intensity and arousal to exploit increases in task utility},
   url = {https://www.biorxiv.org/content/10.1101/2022.03.04.482962v1 https://www.biorxiv.org/content/10.1101/2022.03.04.482962v1.abstract},
