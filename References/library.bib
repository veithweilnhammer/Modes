   title = {An Approximately Bayesian Delta-Rule Model Explains the Dynamics of Belief Updating in a Changing Environment},
   volume = {30},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/20844132 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2945906 http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.0822-10.2010},
