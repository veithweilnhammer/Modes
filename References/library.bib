   issue = {1},
   journal = {Psychological review},
   keywords = {Attention,Attention: physiology,Dominance, Cerebral,Dominance, Cerebral: physiology,Humans,Neurons,Neurons: physiology,Retina,Retina: physiology,Vision Disparity,Vision Disparity: physiology,Visual Cortex,Visual Cortex: physiology,Visual Pathways,Visual Pathways: physiology,Visual Perception,Visual Perception: physiology},
