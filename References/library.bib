   issn = {00223751},
   issue = {18},
   journal = {Journal of Physiology},
   month = {9},
   pages = {4489-4500},
   title = {Theta burst stimulation induces after-effects on contralateral primary motor cortex excitability in humans},
   volume = {586},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/18669534 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2614023},
