   keywords = {Adult,Bayes Theorem,Decision Making,Games, Experimental,Humans,Intention,Learning,Male,Models, Psychological,Motivation,Social Behavior,Young Adult},
   month = {9},
   pages = {e1003810},
   pmid = {25187943},
   publisher = {Public Library of Science},
   title = {Inferring on the intentions of others by hierarchical Bayesian learning.},
